model Session {
  session_id          String  @id @default(auto()) @map("_id") @db.ObjectId
  id                  String    @unique
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
}

model Shopsettings {
  shopsetting_id  String  @id @default(auto()) @map("_id") @db.ObjectId
  id              String  @unique
  shop        String   @unique
  accessToken String?
  scope       String?
  firstName   String?
  settings    Json?
  home        Json?
  product     Json?
  collection  Json?
  cart        Json?
  checkout    Json?
  other       Json?
  notFound       Json?
  search       Json?
  globalSettings Json?
  homeWidgets       String[]
  productWidgets    String[]
  collectionWidgets String[]
  cartWidgets       String[]
  checkoutWidgets   String[]
  otherWidgets      String[]
  preferences Json?
  shopActive  Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  lastLoginAt DateTime?
}
